{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "requireConfigFile": false
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "object-curly-spacing": ["warn", "always"],
    "arrow-parens": ["warn", "as-needed"],
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "react/prop-types": "off"
  }
}
