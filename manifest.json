{
  "name": "Your Birds",
  "description": "Watch 'em fly!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "src/options/options.html",
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/images/icon/icon.png",
      "32": "src/images/icon/icon.png",
      "48": "src/images/icon/icon.png",
      "128": "src/images/icon/icon.png"
    }
  },
  "icons": {
    "16": "src/images/icon/icon.png",
    "32": "src/images/icon/icon.png",
    "48": "src/images/icon/icon.png",
    "128": "src/images/icon/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.gif", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}